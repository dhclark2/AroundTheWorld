.slider-area
  .zigzag-bottom
  #slide-list.carousel.carousel-fade.slide{"data-ride" => "carousel"}
    .slide-bulletz
      .container
        .row
          .col-md-12
            %ol.carousel-indicators.slide-indicators
              %li.active{"data-slide-to" => "0", "data-target" => "#slide-list"}
              %li{"data-slide-to" => "1", "data-target" => "#slide-list"}
    .carousel-inner{:role => "listbox"}
      .item.active
        .single-slide
          .slide-bg.around-the-world-hero
          .slide-text-wrapper
            .slide-text
              .container
                .row
                  .col-md-6.col-md-offset-6
                    .slide-content
                      %h2 Dining Around The World
                      %p Welcome to the best restaurant search app ever created
                      %p Implemented by Cohort 6 Rails Team at The Iron Yard
                      = link_to "Checkout the Code!", "https://github.com/tiy-tpa-ruby/AroundTheWorld", class: "readmore"
      .item
        .single-slide
          .slide-bg.created-with-rails
          .slide-text-wrapper
            .slide-text
              .container
                .row
                  .col-md-6.col-md-offset-6
                    .slide-content
                      %h2 Created with Rails
                      %p We used Rails, Bootstrap, Omniauth, ActiveRecord and other great tools
                      = link_to "Learn about Rails", "http://guides.rubyonrails.org", class: "readmore"
/ End slider area

.promo-area
  .zigzag-bottom
  .container
    .row
      .col-md-4.col-sm-12
        .single-promo
          %i.fa.fa-truck
          %p Delivery!
      .col-md-4.col-sm-12
        .single-promo
          %i.fa.fa-lock
          %p Secure payments
      .col-md-4.col-sm-12
        .single-promo
          %i.fa.fa-gift
          %p New dining experiences
/ End promo area
.maincontent-area
  .zigzag-bottom
  .container
    .row
      .col-md-12
        .latest-product
          %h2.section-title Latest Restaurants
          .product-carousel
            - @latest_restaurants.each do |restaurant|
              .single-product
                .product-f-image
                  - if restaurant.pictures.any?
                    = image_tag attachment_url(restaurant.pictures.first, :image), size: "200x200"
                  - else
                    = image_tag "default-restaurant-image.jpg", size: "200x200"
                  .product-hover
                    = link_to restaurant, class: "view-details-link" do
                      %i.fa.fa-link
                      See details
                %h2
                  = link_to restaurant.name, restaurant

/ End main content area
.brands-area
  .zigzag-bottom
  .container
    .row
      .col-md-12
        .brand-wrapper
          %h2.section-title Cuisines
          .brand-list
            = link_to restaurants_path(cuisine: "italian") do
              = image_tag "italian.jpg"
            = link_to restaurants_path(cuisine: "burgers") do
              = image_tag "burger.jpg"

